<%- include('../../../views/layouts/head') %>
        <div class="breadcrumbs">
            <div class="breadcrumbs-inner">
                <div class="row m-0">
                    <div class="col-sm-4">
                        <div class="page-header float-left">
                            <div class="page-title">
                                <h1><%= __('Dashboard') %></h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="page-header float-right">
                            <div class="page-title">
                                <ol class="breadcrumb text-right">
                                    <li><a href="#"><%= __('Dashboard') %></a></li>
                                    <li><a href="#">Forms</a></li>
                                    <li class="active"><%= __('Add customer') %></li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="content">
            <div class="animated fadeIn">


                <div class="row">
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">---</strong>
                            </div>
                            <div class="card-body">
                                <p>---</p>
                            </div>
                        </div> 
                    </div>

                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header"><strong><%= __('Add customer') %></strong></div>
                            <div class="card-body card-block">
                                <% if(message.length > 0) { %> 
                                    <div class="alert alert-<%= type %>" role="alert"><%= message %></div>
                                <% } %>
                                <form action="/employee/add" method="POST">
                                    <div class="form-group">
                                        <label for="name" class="control-label mb-1"><%= __('Name') %></label>
                                        <input name="name" type="text" class="form-control" 
                                                aria-required="true" aria-invalid="false" placeholder="name...">
                                    </div>
                                    <div class="form-group">
                                        <label for="surname" class="control-label mb-1"><%= __('Surname') %></label>
                                        <input name="surname" type="text" class="form-control" 
                                                aria-required="true" aria-invalid="false" placeholder="surname...">
                                    </div>
                                    <div class="form-group">
                                        <label for="email" class="control-label mb-1"><%= __('Email') %></label>
                                        <input type="email" name="email" class="form-control" 
                                                aria-required="true" aria-invalid="false" placeholder="email...">
                                    </div>
                                    <div class="form-group">
                                        <label for="user_role" class="control-label mb-1"><%= __('Role') %></label>
                                        <select name="user_role" class="form-control">
                                            <option value="seller"><%= __('Seller') %></option>
                                            <option value="manager"><%= __('Manager') %></option>
                                            <option value="admin"><%= __('Admin') %></option>
                                            <option value="developer"><%= __('Developer') %></option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="password" class="control-label mb-1"><%= __('Password') %></label>
                                        <input type="password" name="password" class="form-control" 
                                                aria-required="true" aria-invalid="false" placeholder="*****">
                                    </div>
                                    <div class="form-group">
                                        <label for="password_confirm" class="control-label mb-1"><%= __('Confirm password') %></label>
                                        <input type="password" name="password_confirm" class="form-control" 
                                                aria-required="true" aria-invalid="false" placeholder="*****">
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-info pull-right"><%= __('Add') %></button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer">
                                <!-- <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fa fa-dot-circle-o"></i> Submit
                                </button> -->
                                <!-- <button type="reset" class="btn btn-danger btn-sm">
                                    <i class="fa fa-ban"></i> Reset
                                </button> -->
                                <!-- <button class="btn btn-primary pull-right">
                                    Submit
                                </button> -->
                            </div>
                        </div>
                    </div>

            </div>
        </div>
    </div>

<% var foot = ``; %>
<%- include('../../../views/layouts/foot', {foot:foot}) %>

