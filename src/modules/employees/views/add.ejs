        <div class="content">
            <div class="animated fadeIn">


                <div class="row">
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">---</strong>
                            </div>
                            <div class="card-body">
                                <p>---</p>
                            </div>
                        </div> 
                    </div>

                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header"><strong>Add employee</strong></div>
                            <div class="card-body card-block">
                                <% if(message.length > 0) { %> 
                                    <div class="alert alert-<%= type %>" role="alert"><%= message %></div>
                                <% } %>
                                <form action="/employee/add" method="POST">
                                    <div class="form-group">
                                        <label for="name" class="control-label mb-1">Name</label>
                                        <input name="name" type="text" class="form-control" 
                                                aria-required="true" aria-invalid="false" placeholder="name...">
                                    </div>
                                    <div class="form-group">
                                        <label for="surname" class="control-label mb-1">Surname</label>
                                        <input name="surname" type="text" class="form-control" 
                                                aria-required="true" aria-invalid="false" placeholder="surname...">
                                    </div>
                                    <div class="form-group">
                                        <label for="email" class="control-label mb-1">Email</label>
                                        <input type="email" name="email" class="form-control" 
                                                aria-required="true" aria-invalid="false" placeholder="email...">
                                    </div>
                                    <div class="form-group">
                                        <label for="user_role" class="control-label mb-1">Role</label>
                                        <select name="user_role" class="form-control">
                                            <option value="seller">Seller</option>
                                            <option value="manager">Manager</option>
                                            <option value="admin">Admin</option>
                                            <option value="developer">Developer</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="password" class="control-label mb-1">Password</label>
                                        <input type="password" name="password" class="form-control" 
                                                aria-required="true" aria-invalid="false" placeholder="*****">
                                    </div>
                                    <div class="form-group">
                                        <label for="password_confirm" class="control-label mb-1">Confirm password</label>
                                        <input type="password" name="password_confirm" class="form-control" 
                                                aria-required="true" aria-invalid="false" placeholder="*****">
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-info pull-right">Add</button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer">
                                <!-- <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fa fa-dot-circle-o"></i> Submit
                                </button> -->
